<!DOCTYPE html>
<html class="no-js" lang="en">

<!-- =========  Header ======= -->
<% include partials/header.ejs %>
	<!-- ==========  Header End ===== -->


	<body>

		<div class="loader dark">
			<svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
			 width="24px" height="30px" viewBox="0 0 24 30" style="enable-background:new 0 0 50 50;" xml:space="preserve">
				<rect x="0" y="0" width="4" height="10" fill="#333">
					<animateTransform attributeType="xml" attributeName="transform" type="translate" values="0 0; 0 20; 0 0" begin="0" dur="0.6s"
					 repeatCount="indefinite" />
				</rect>
				<rect x="10" y="0" width="4" height="10" fill="#333">
					<animateTransform attributeType="xml" attributeName="transform" type="translate" values="0 0; 0 20; 0 0" begin="0.2s" dur="0.6s"
					 repeatCount="indefinite" />
				</rect>
				<rect x="20" y="0" width="4" height="10" fill="#333">
					<animateTransform attributeType="xml" attributeName="transform" type="translate" values="0 0; 0 20; 0 0" begin="0.4s" dur="0.6s"
					 repeatCount="indefinite" />
				</rect>
			</svg>
		</div>



		<!-- Nav and Logo
	================================================== -->

		<div id="menu-wrap" class="menu-back cbp-af-header dark">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<nav class="navbar navbar-expand-lg navbar-light bg-light mx-lg-0">
							<a class="navbar-brand" href="index">
								<img src="img/logo-light.png" alt="">
							</a>
							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
							 aria-expanded="false" aria-label="Toggle navigation">
								<span class="navbar-toggler-icon">
									<span class="menu-icon__line menu-icon__line-left"></span>
									<span class="menu-icon__line"></span>
									<span class="menu-icon__line menu-icon__line-right"></span>
								</span>
							</button>

							<div class="collapse navbar-collapse" id="navbarSupportedContent">
								<ul class="navbar-nav ml-auto">
									<li class="nav-item">
										<a class="nav-link" href="/home">হোম</a>
									</li>
									<li class="nav-item mt-2">
										<a class="btn btn-primary js-tilt" href="logout" role="button" data-tilt-perspective="300" data-tilt-speed="700" data-tilt-max="24">
											<span>লগ আউট</span>
										</a>
									</li>
								</ul>
							</div>
						</nav>
					</div>
				</div>
			</div>
		</div>


		<!-- Primary Page Layout -->

		<!--  Quiz Start -->



		<div class="section padding-top-bottom-big" id="quiz">
			<div style="height: 100px;"></div>
			<div class="background-parallax" style="background-image: url('img/parallax-dark.jpg')" data-enllax-ratio=".5" data-enllax-type="background"
			 data-enllax-direction="vertical"></div>
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="title-wrap text-center">
							<div class="back-title">
								<%= round %>
							</div>
							<h1 class="text-white">কুইজ</h1>
							<% if (rightAnswer == 0) { %>
								<p style="color: #ffff">আপনি
									<%= rightAnswer %> প্রশ্নের সঠিক উত্তর দিয়েছেন
										<br> আপনার স্কোর: 0 </p>
								<% } else { %>
									<p style="color: #ffff">আপনি
										<%= rightAnswer %> প্রশ্নের সঠিক উত্তর দিয়েছেন
											<br> আপনার স্কোর:
											<%= finalMark %>
									</p>
									<% }  %>


										<h6 style="color: #ffff">নিচে ১০ টি প্রশ্নের সমাধান</h6>
						</div>
					</div>



					<!-- Quiz Answer form start  -->
					<div class="col-md-12">

						<form method="post" action="#" role="form">
							<div class="controls">
								<% let i = 1 %>

									<% for (question in questions) { %>
										<div class="background-color" style="padding-top: 5px">

											<input type="hidden" name="questionId<%= parseInt(question)+1  %>" value="<%= questions[question].Id %>">
											<div class="col-md-12 mt-3">
												<div class="form-group">
													<h3 style="color: #ffffff">
														<b>প্রশ্ন -
															<%= number[i++] %>: </b>
														<%= questions[question].Question %>
													</h3>
												</div>
											</div>

											<div class="col-md-12 mt-3">
												<div class="col-md-12 mt-3 mt-md-0">
													<div class="form-group" style="margin-left: 65px">

														<% var a = ['No', 'Answer_option_1', 'Answer_option_2' ,'Answer_option_3']  %>

															<input type='radio' style="color: #ffffff" id="1<%= parseInt(question)+0 %>" name='answer<%= parseInt(question)+1 %>' value='1'
															/> &nbsp
															<span style="color: #ffffff">
																<%= questions[question].Answer_option_1 %>
															</span>
															<br>
															<input type='radio' style="color: #ffffff" id="2<%= parseInt(question)+0 %>" name='answer<%= parseInt(question)+1 %>' value='1'
															/> &nbsp
															<span style="color: #ffffff">
																<%= questions[question].Answer_option_2 %>
															</span>
															<br>
															<input type='radio' style="color: #ffffff" id="3<%= parseInt(question)+0 %>" name='answer<%= parseInt(question)+1 %>' value='1'
															/> &nbsp
															<span style="color: #ffffff">
																<%= questions[question].Answer_option_3 %>
															</span>
															<br>

															<br>
															<br>
															<p style="color: #ffffff"> সঠিক উত্তর :
																<span style="color: black">
																	<%= questions[question] [a[questions[question].Question_answer]] %>
																</span>
															</p>

															<% if ( questions[question].Question_answer !== studentAnswer[question].A ) {  %>
																<% if (  studentAnswer[question].A  !== 0 ) {  %>
																	<p style="color:#ffffff"> আপনার উত্তর :
																		<span style="color: #4A1308">
																			<%= questions[question] [a[studentAnswer[question].A]] %>
																		</span>
																	</p>
																	<%	}  else {  %>
																		<p style="color:#ffffff"> আপনার উত্তর :
																			<span style="color: #4A1308"> আপনি কোন উত্তর সিলেক্ট করেন নি। </span>
																		</p>
																		<% }  %>

																			<% }  %>

																				<p style="color: #ffffff"> ফলাফল :
																					<%= finalResult[question] %>
																				</p>

													</div>
												</div>
											</div>
											<div class="col-md-10 mt-3">
												<div class="form-group">
													<h5 style="color: yellow ; padding-bottom: 5px"> ( তথ্য উপাত্ত :
														<%= questions[question].Answer_details %> )</h5>
												</div>
											</div>
										</div>
										<br>
										<br>
										<%   }    %>

											<div class="row justify-content-center" style="padding-bottom: 50px">
											</div>
							</div>
						</form>
					</div>



					<div class="col-md-12">
						<div class="title-wrap text-center">
							<% if(NextRoundinfo.this_round_number_playing < 2 && 7 > NextRoundinfo.this_round_currect_answer){  %>
								<form action="/quiz" method="POST">
									<input type="hidden" value="<%= roundId %>" name="roundId">
									<input class="btn btn-primary js-tilt" type="submit" value="আবার খেলো">
									<br>
								</form>
								<%  }  %>
									<br>

									<% if(NextRoundinfo.previous_round_number_playing < 2 && NextRoundinfo.previous_round_currect_answer  < 7 && NextRoundinfo.previous_round_currect_answer > -1 && roundId < 7){  %>
										<form method="POST" action="/quiz">
											<input type="hidden" name="roundId" value="<%= parseInt(roundId) + 1 %>">
											<input class="btn btn-primary js-tilt" style="margin:auto; display:block;" name="submit" type="submit" value="পরের রাউন্ড খেলো">
											<br>
										</form>
										<%  }  %>

											<form action="/home" method="GET">
												<input class="btn btn-primary js-tilt" type="submit" value="ফিরে যাও" />
											</form>

						</div>
					</div>
					<!-- Quiz form end  -->

				</div>
			</div>

		</div>




		<!--- Footer up  -->

		<% include partials/footer_copy_right.ejs %>

			<!--- Footer finigh  -->

			<div class="scroll-to-top">to top</div>




			<!-- No Back Option   -->

			<script>
				history.pushState(null, null, location.href);
				window.onpopstate = function () {
					history.go(1);
				};
			</script>


			<!-- JAVASCRIPT  -->
			<script src="js/jquery-3.2.1.min.js"></script>
			<script src="js/popper.min.js"></script>
			<script src="js/bootstrap.min.js"></script>
			<script src="js/plugins.js"></script>
			<script src="js/chart-custom.js"></script>
			<script src="js/particles-dark.js"></script>
			<script src="js/custom.js"></script>


			<!-- End Document -->


	</body>

</html>