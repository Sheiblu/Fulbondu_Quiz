<!DOCTYPE html>

<html class="no-js" lang="en">

<!-- =========  Header ======= -->
<% include partials/header.ejs %>
	<!-- ==========  Header End ===== -->

	<body>

		<div class="loader dark">
			<svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
			 width="24px" height="30px" viewBox="0 0 24 30" style="enable-background:new 0 0 50 50;" xml:space="preserve">
				<rect x="0" y="0" width="4" height="10" fill="#333">
					<animateTransform attributeType="xml" attributeName="transform" type="translate" values="0 0; 0 20; 0 0" begin="0" dur="0.6s"
					 repeatCount="indefinite" />
				</rect>
				<rect x="10" y="0" width="4" height="10" fill="#333">
					<animateTransform attributeType="xml" attributeName="transform" type="translate" values="0 0; 0 20; 0 0" begin="0.2s" dur="0.6s"
					 repeatCount="indefinite" />
				</rect>
				<rect x="20" y="0" width="4" height="10" fill="#333">
					<animateTransform attributeType="xml" attributeName="transform" type="translate" values="0 0; 0 20; 0 0" begin="0.4s" dur="0.6s"
					 repeatCount="indefinite" />
				</rect>
			</svg>
		</div>



		<!-- Nav and Logo -->

		<div id="menu-wrap" class="menu-back cbp-af-header dark">
			<% include partials/menu/menu_without_login.ejs %>
		</div>





		<!-- Primary Page Layout -->





		<div class="section height-auto-lg min-height hide-over background-dark-blue-3">
			<div class="section padding-bottom-big">
				<div class="section padding-top-big">
					<div class="container padding-top-big" style="background-image: url('img/parallax-dark-3.jpg');">
						<div class="row justify-content-center">
							<div class="col-md-12">
								<div class="form-group text-center">
									<h4 style="color: #ffffff; padding-top: 10px">ফুলবন্ধুতে রেজিস্ট্রেশন করুন</h4>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group text-center">
									<p style="color: #ffffff; padding-top: 10px">
										<%= message %>
									</p>
								</div>
							</div>
							<div class="col-md-12 text-center mt-4">

								<form class="mt-5" method="post" action="registration" role="form">
									<div class="controls">
										<!--- Name  -->
										<div class="row justify-content-center">
											<div class="col-md-6 mt-3">
												<div class="form-group text-center">
													<input id="form_name" style="background-color: #7F00FF" required="required" type="text" name="name" class="form-control text-center"
													 placeholder="নাম">
													<div class="help-block with-errors"></div>
												</div>
											</div>
										</div>
										<!--- School  -->
										<div class="row justify-content-center">
											<div class="col-md-6 mt-3">
												<div class="form-group text-center">
													<input id="form_school" style="background-color: #7F00FF" required="required" type="text" name="school" class="form-control text-center"
													 placeholder="স্কুল">
													<div class="help-block with-errors"></div>
												</div>
											</div>
										</div>

										<!--- Class Roll -->


										<div class="row justify-content-center">
											<div class="col-md-3">
												<div class="form-group text-center">
													<select style="background-color: #7F00FF ; color: #ffffff" id="form_upojela" class="form-control text-center" required="required"
													 name='St_class'>
														<option value="0">শ্রেণি</option>
														<option value="6">৬</option>
														<option value="7">৭</option>
														<option value="8">৮</option>
														<option value="9">৯</option>
														<option value="10">১০</option>
														<option value="11">১১</option>
														<option value="12">১২</option>
													</select>
												</div>
											</div>
											<div class="col-md-3 mt-3 mt-md-0">
												<div class="form-group text-center">
													<input style="background-color: #7F00FF ; color: #ffffff" id="form_roll" required="required" type="text" name="roll" class="form-control text-center"
													 placeholder="রোল">
													<div class="help-block with-errors"></div>
												</div>
											</div>
										</div>

										<!--- জেলা   -->
										<div class="row justify-content-center">
											<div class="col-md-3">
												<div class="form-group text-center">
													<select style="color: #ffffff; background-color: #7F00FF " id="form_upojela" class="form-control text-center" name='zila'></select>
												</div>
											</div>
											<div class="col-md-3 mt-3 mt-md-0">
												<div class="form-group text-center">
													<select style="color: #ffffff; background-color: #7F00FF " class="form-control text-center" name="upozila"></select>
												</div>
											</div>
										</div>

										<!-- Date  -->
										<div class="row justify-content-center">
											<div class="col-md-6 mt-3">
												<div class="form-group text-center">
													<input style="background-color: #7F00FF" id="form_phone" required="required" type="date" name="birthday" class="form-control text-center"
													 placeholder="আপনার ফোন নম্বর দিন">
													<div class="help-block with-errors"></div>
												</div>
											</div>
										</div>
										<!-- Phone Number  -->
										<div class="row justify-content-center">
											<div class="col-md-6 mt-3">
												<div class="form-group text-center">
													<input style="background-color: #7F00FF" id="form_phone" required="required" type="number" name="phone" class="form-control text-center"
													 placeholder="আপনার ফোন নম্বর দিন">
													<div class="help-block with-errors"></div>
												</div>
											</div>
										</div>

										<!--- Password  -->
										<div class="row justify-content-center">
											<div class="col-md-6 mt-3">
												<div class="form-group text-center">
													<input style="background-color: #7F00FF" id="form_phone" required="required" type="password" name="password" class="form-control text-center"
													 placeholder="পাসওয়ার্ড দিন">
													<div class="help-block with-errors"></div>
												</div>
											</div>
										</div>

										<div class="row justify-content-center" style="padding-bottom: 50px">
											<div class="col-md-8 mt-3 text-center">
												<input type="submit" class="btn btn-primary btn-send text-center" value="নিবন্ধন">
											</div>
										</div>

									</div>
								</form>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<% include partials/footer_copy_right.ejs %>

			<div class="scroll-to-top">to top</div>


			<!-- JAVASCRIPT
    ================================================== -->
			<script src="js/jquery-3.2.1.min.js"></script>
			<script src="js/popper.min.js"></script>
			<script src="js/bootstrap.min.js"></script>
			<script src="js/plugins.js"></script>
			<script src="js/chart-custom.js"></script>
			<script src="js/particles-dark.js"></script>
			<script src="js/custom.js"></script>
			<script src="js/select_jela.js"></script>
			<!--     <script src="js/menu.js"></script>   -->

			<!-- End Document
================================================== -->
	</body>

</html>